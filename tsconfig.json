{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "allowJs": false,
        "target": "es5",
        "lib": [ "es2015" ],
        "strict": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["./src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["jest"],
        "declarationDir": "./lib",
        "declaration": true,
        "declarationMap": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "./src/*.spec.ts"
    ]
}
